                        {{ section.settings.richtext }}

                    </div>

                {% endif %}

                {% if section.settings.showSocialMediaIcons %}

                    {%- assign sectionAnimationOrder = sectionAnimationOrder | plus: 1 -%}

                    {%- capture class -%}
                        social-media-buttons-container mt-4 text-{{ section.settings.sectionTextAlign }}
                    {%- endcapture -%}
        
                    {%- capture attrs -%}
