        --bs-body-bg-rgb: {{ settings.style_header_bg_color | color_to_rgb | replace: 'rgb(', '' | replace: ')', '' }};
        --bs-body-color: {{ settings.style_header_text_color }};
        --bs-body-color-rgb: {{ settings.style_header_text_color | color_to_rgb | replace: 'rgb(', '' | replace: ')', '' }};

