        --bs-emphasis-color-rgb: {{ settings.style_header_accent_color | color_to_rgb | replace: 'rgb(', '' | replace: ')', '' }};

        --bs-link-color: {{ settings.style_header_text_color }};
        --bs-link-color-rgb: {{ settings.style_header_text_color | color_to_rgb | replace: 'rgb(', '' | replace: ')', '' }};
        --bs-link-hover-color: {{ settings.style_header_text_color }};
        --bs-link-hover-color-rgb: {{ settings.style_header_text_color | color_to_rgb | replace: 'rgb(', '' | replace: ')', '' }};

