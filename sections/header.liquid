                                <button type="submit" class="btn btn-icon pe-0">

                                    {%- render 'icon', icon: 'search', class: 'svg-icon-fw' -%}

                                </button>
                                                        
                                <div class="form-floating">

                                    <input id="site-mobile-site-search" class="form-control" type="search" placeholder="{{ 'general.search_products' | t }}" name="q" value="{{ search.search_term }}" autocomplete="off">
                                    
