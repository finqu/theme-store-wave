<style>{{ sectionStyle | strip | replace: '  ', '' | strip_newlines }}</style>

{%- if request.page_type == 'frontpage' -%}
    <h1 class="text-hidden">{{- store.name -}}</h1>
{%- endif -%}

{%- if settings.accessibilityShowSearch -%}

    <div class="site-search-container site-search-floating">

        <div class="site-search">

            <div class="site-search-form-container">

                {% form 'search', class: 'site-search-form' %}

                    {% if form.posted_successfully? %}

                        <script type="application/javascript">
                            document.addEventListener('DOMContentLoaded', function() {
                                document.dispatchEvent(new CustomEvent('theme:search', {
                                    detail: {
                                        query: {{ submitted_form.q | json }}
                                    }
                                }));
                            });
                        </script>

                    {% endif %}

                    <div class="input-group">

                        <button type="submit" class="btn pe-0">

                            {%- render 'icon', icon: 'search', class: 'svg-icon-fw' -%}

                        </button>

                        <input
                            class="form-control"
                            type="search"
                            placeholder="{{ 'general.search_products' | t }}"
                            name="q"
                            value="{{ search.search_term }}"
                            autocomplete="off">

                        <button type="reset" class="btn btn-icon ps-0">

                            {%- render 'icon', icon: 'close', class: 'svg-icon-fw' -%}

                        </button>

                    </div>

                {% endform %}

            </div>

            <div class="site-search-results-container">

                <div class="site-search-results"></div>

            </div>

        </div>

    </div>

{%- endif -%}

<div class="site-mobile-header-container{% if section.settings.stickyMobileHeader %} site-mobile-header-sticky{% endif %}">

    <div class="site-mobile-header">

        <div class="site-mobile-header-items-container">

            <div class="site-mobile-header-items container">

                <div class="site-mobile-header-items-nav-container">

                    <div class="site-mobile-header-item">

                        <button type="button" class="site-mobile-navigation-toggle btn btn-text">

                            {%- render 'icon', icon: 'navigation-menu', class: 'svg-icon-fw' -%}
                            {%- render 'icon', icon: 'close', class: 'd-none' -%}

                        </button>

                    </div>

                    {% if customer %}

                        <div class="site-mobile-header-item site-mobile-header-item-account">

                            <a href="{{ routes.account_url }}" class="btn btn-text">

                                {%- render 'icon', icon: 'user', class: 'svg-icon-fw' -%}

                            </a>

                        </div>

                    {% endif %}

                </div>

                <div class="site-mobile-header-items-logo-container">

                    <div class="site-mobile-header-item site-mobile-header-logo">

                        <a href="{{ routes.root_url }}">

                            {%- assign imgSizeOnPhone = '200,25' -%}
                            {%- assign imgSizeOnTablet = '400,35' -%}

                            {% if section.settings.logoImgSrc %}

                                <img
                                    alt="{{ store.name }}"
                                    src="{{ section.settings.logoImgSrc | thumb: imgSizeOnTablet }}"
                                    srcset="{{ section.settings.logoImgSrc | thumb: imgSizeOnTablet }} 1x, {{ section.settings.logoImgSrc | thumb: imgSizeOnTablet | thumb:'@2x' }} 2x"
                                    class="img-fluid site-mobile-header-logo-img d-none d-md-block">

                                <img
                                    alt="{{ store.name }}"
                                    src="{{ section.settings.logoImgSrc | thumb: imgSizeOnPhone }}"
                                    srcset="{{ section.settings.logoImgSrc | thumb: imgSizeOnPhone }} 1x, {{ section.settings.logoImgSrc | thumb: imgSizeOnPhone | thumb:'@2x' }} 2x"
                                    class="img-fluid site-mobile-header-logo-img d-block d-md-none">

                            {% else %}

                                <span class="site-mobile-header-logo-text">
                                    {{ store.name }}
                                </span>

                            {% endif %}

                        </a>

                    </div>

                </div>

                <div class="site-mobile-header-items-actions-container">

                    {% if customer %}

                        <div class="site-mobile-header-item site-mobile-header-item-wishlist">

                            <a href="{{ routes.account_wishlist_url }}" class="btn btn-text">

                                <span class="site-mobile-header-item-counter{% if wishlist.products.size > 0 %} has-items{% endif %}">

                                    <span class="site-mobile-header-item-counter-text" data-wishlist-item-count>
                                        {{ wishlist.products.size }}
                                    </span>

                                </span>

                                {%- render 'icon', icon: 'like', class: 'svg-icon-fw' -%}

                            </a>

                        </div>

                    {% endif %}

                    <div class="site-mobile-header-item site-mobile-header-item-cart">

                        <a href="{{ routes.cart_url }}" class="btn btn-text">

                            <span class="site-mobile-header-item-counter{% if cart.items.size > 0 %} has-items{% endif %}">

                                <span class="site-mobile-header-item-counter-text" data-cart-item-count>
                                    {{ cart.item_count }}
                                </span>

                            </span>

                            {%- render 'icon', icon: 'cart', class: 'svg-icon-fw' -%}

                        </a>

                    </div>

                </div>

            </div>

        </div>

    </div>

</div>

<nav class="site-mobile-navigation-container">

    {%- assign layerIndex = 0 -%}

    {% for item in mobileMenu.links %}

        {% if item.links %}

            {%- assign layerIndex = layerIndex | plus: 1 -%}

            <div class="site-mobile-navigation-layer site-mobile-navigation-layer-child" data-mobile-navigation-layer-id="{{ layerIndex }}">

                <div class="site-mobile-navigation-header">

                    <div class="site-mobile-navigation-header-inner">

                        <button
                            type="button"
                            name="site-mobile-navigation-hide-layer"
                            class="btn btn-text"
                            value="{{ layerIndex }}">
                            {%- render 'icon', icon: 'angle-left' -%}
                        </button>

                        <span class="site-mobile-navigation-header-text">
                            {{ item.title }}
                        </span>

                    </div>

                </div>

                <ul class="site-mobile-navigation-menu">

                    {% for item in item.links %}

                        <li class="site-mobile-navigation-menu-item{% if item.links %} site-mobile-navigation-menu-item-parent{% endif %}{% if item.active %} site-mobile-navigation-menu-item-active{% endif %}">

                            {%- if item.url -%}

                                <a
                                    href="{{ item.url }}"
                                    target="{{ item.target | default: '_self' }}"
                                    class="site-mobile-navigation-menu-item-text">
                                    {{ item.title }}
                                </a>

                                {%- if item.links -%}

                                    <button
                                        type="button"
                                        name="site-mobile-navigation-show-layer"
                                        class="btn btn-text"
                                        value="{{ layerIndex }}-{{ forloop.index }}">
                                        {%- render 'icon', icon: 'angle-right' -%}
                                    </button>

                                {% endif %}

                            {%- else -%}

                                <span class="site-mobile-navigation-menu-item-text">
                                    {{ item.title }}
                                </span>

                                {%- if item.links -%}

                                    <button
                                        type="button"
                                        name="site-mobile-navigation-show-layer"
                                        class="btn btn-text"
                                        value="{{ layerIndex }}-{{ forloop.index }}">
                                        {%- render 'icon', icon: 'angle-right' -%}
                                    </button>

                                {% endif %}

                            {%- endif -%}

                        </li>

                    {% endfor %}

                </ul>

            </div>

            {% for item in item.links %}

                {% if item.links %}

                    <div class="site-mobile-navigation-layer site-mobile-navigation-layer-child" data-mobile-navigation-layer-id="{{ layerIndex }}-{{ forloop.index }}">

                        <div class="site-mobile-navigation-header">

                            <div class="site-mobile-navigation-header-inner">

                                <button
                                    type="button"
                                    name="site-mobile-navigation-hide-layer"
                                    class="btn btn-text"
                                    value="{{ layerIndex }}-{{ forloop.index }}">
                                    {%- render 'icon', icon: 'angle-left' -%}
                                </button>

                                <span class="site-mobile-navigation-header-text">
                                    {{ item.title }}
                                </span>

                            </div>

                        </div>

                        <ul class="site-mobile-navigation-menu">

                            {% for item in item.links %}

                                <li class="site-mobile-navigation-menu-item{% if item.links %} site-mobile-navigation-menu-item-parent{% endif %}{% if item.active %} site-mobile-navigation-menu-item-active{% endif %}">

                                    {%- if item.url -%}

                                        <a
                                            href="{{ item.url }}"
                                            target="{{ item.target | default: '_self' }}"
                                            class="site-mobile-navigation-menu-item-text">
                                            {{ item.title }}
                                        </a>

                                    {%- else -%}

                                        <span class="site-mobile-navigation-menu-item-text">
                                            {{ item.title }}
                                        </span>

                                    {%- endif -%}

                                </li>

                            {% endfor %}

                        </ul>

                    </div>

                {% endif %}

            {% endfor %}

        {% endif %}

    {% endfor %}

