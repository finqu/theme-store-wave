            --bs-tertiary-bg-rgb: {{ settings.style_bg_color | color_darken: 10 | color_to_rgb | replace: 'rgb(', '' | replace: ')', '' }};
            --bs-tertiary-color: {{ settings.style_text_color | color_modify: 'alpha', 0.5 }};
            --bs-tertiary-color-rgb: {{ settings.style_text_color | color_modify: 'alpha', 0.5 | replace: 'rgba(', '' | replace: ', 0.5)', '' }};

