{%- assign sectionMinHeight = section.settings.sectionMinHeight | append: 'vh' -%}
{%- assign sectionHandle = '#finqu-section-' | append: section.id -%}

{%- if section.settings.sectionOverline -%}
    {%- assign sectionAnimationOrder = sectionAnimationOrder | plus: 1 -%}
{%- endif -%}

{%- if section.settings.sectionTitle -%}
    {%- assign sectionAnimationOrder = sectionAnimationOrder | plus: 1 -%}
{%- endif -%}

{%- if section.settings.sectionSubtitle -%}
    {%- assign sectionAnimationOrder = sectionAnimationOrder | plus: 1 -%}
{%- endif -%}

{%- if section.settings.sectionTextAlign == 'nil' -%}
    {%- assign textAlign = settings.sectionTextAlign -%}
{%- else -%}
    {%- assign textAlign = section.settings.sectionTextAlign -%}
{%- endif -%}

{%- capture countdownContent -%}

    {% if section.settings.datetime or request.design_mode %}

        {%- assign sectionAnimationOrder = sectionAnimationOrder | plus: 1 -%}

        {%- if section.settings.datetime -%}

            {%- if request.design_mode == 'edit' -%}
                {%- assign eventName = 'finqu:section:load' -%}
            {%- else -%}
                {%- assign eventName = 'theme:ready' -%}
            {%- endif -%}

            <script defer="defer">
                document.addEventListener('{{- eventName -}}', () => theme.utils.countdown({
                    el: document.querySelector('{{ sectionHandle }} .countdown-container'),
                    datetime: {{ section.settings.datetime | json -}},
                    zeroPad: {{ section.settings.zeroPad | json -}},
                    hideTimeUnitOnZero: {{ section.settings.hideTimeUnitOnZero | json -}},
                    showYears: {{ section.settings.showYears | json -}},
                    showMonths: {{ section.settings.showMonths | json -}},
                    events: {
                        complete: () => location.reload()
                    }
                }));
            </script>

            {%- assign targetDate = section.settings.datetime | date: '%s' | times: 1000 -%}
            {%- assign currentDate = 'now' | date: '%s' | times: 1000 -%}
            {%- assign diff = targetDate | minus: currentDate -%}

            {%- if section.settings.showYears and section.settings.showMonths -%}

                {%- assign yearsEquationA = 1000 | times: 60 | times: 60 | times: 24 | times: 365.25 -%}
                {%- assign years = diff | divided_by: yearsEquationA | floor -%}

                {%- assign monthsEquationA = 1000 | times: 60 | times: 60 | times: 24 | times: 365.25 -%}
                {%- assign monthsEquationB = 1000 | times: 60 | times: 60 | times: 24 | times: 30.44 -%}
                {%- assign months = diff | modulo: monthsEquationA | divided_by: monthsEquationB | floor -%}

                {%- assign daysEquationA = 1000 | times: 60 | times: 60 | times: 24 | times: 30.44 -%}
                {%- assign daysEquationB = 1000 | times: 60 | times: 60 | times: 24 -%}
                {%- assign days = diff | modulo: daysEquationA | divided_by: daysEquationB | floor -%}

                {%- assign hoursEquationA = 1000 | times: 60 | times: 60 | times: 24 -%}
                {%- assign hoursEquationB = 1000 | times: 60 | times: 60 -%}
                {%- assign hours = diff | modulo: hoursEquationA | divided_by: hoursEquationB | floor -%}

                {%- assign minutesEquationA = 1000 | times: 60 | times: 60 -%}
                {%- assign minutesEquationB = 1000 | times: 60 -%}
                {%- assign minutes = diff | modulo: minutesEquationA | divided_by: minutesEquationB | floor -%}

                {%- assign secondsEquationA = 1000 | times: 60 -%}
                {%- assign seconds = diff | modulo: secondsEquationA | divided_by: 1000 | floor  -%}

            {%- elsif section.settings.showYears -%}

                {%- assign yearsEquationA = 1000 | times: 60 | times: 60 | times: 24 | times: 365.25 -%}
                {%- assign years = diff | divided_by: yearsEquationA | floor -%}

                {%- assign daysEquationA = 1000 | times: 60 | times: 60 | times: 24 | times: 365.25 -%}
                {%- assign daysEquationB = 1000 | times: 60 | times: 60 | times: 24 -%}
                {%- assign days = diff | modulo: daysEquationA | divided_by: daysEquationB | floor -%}

                {%- assign hoursEquationA = 1000 | times: 60 | times: 60 | times: 24 -%}
                {%- assign hoursEquationB = 1000 | times: 60 | times: 60 -%}
                {%- assign hours = diff | modulo: hoursEquationA | divided_by: hoursEquationB | floor -%}

                {%- assign minutesEquationA = 1000 | times: 60 | times: 60 -%}
                {%- assign minutesEquationB = 1000 | times: 60 -%}
                {%- assign minutes = diff | modulo: minutesEquationA | divided_by: minutesEquationB | floor -%}

                {%- assign secondsEquationA = 1000 | times: 60 -%}
                {%- assign seconds = diff | modulo: secondsEquationA | divided_by: 1000 | floor  -%}

            {%- elsif section.settings.showMonths -%}

                {%- assign monthsEquationA = 1000 | times: 60 | times: 60 | times: 24 | times: 30.44 -%}
                {%- assign months = diff | divided_by: monthsEquationA | floor -%}

                {%- assign daysEquationA = 1000 | times: 60 | times: 60 | times: 24 | times: 30.44 -%}
                {%- assign daysEquationB = 1000 | times: 60 | times: 60 | times: 24 -%}
                {%- assign days = diff | modulo: daysEquationA | divided_by: daysEquationB | floor -%}

                {%- assign hoursEquationA = 1000 | times: 60 | times: 60 | times: 24 -%}
                {%- assign hoursEquationB = 1000 | times: 60 | times: 60 -%}
                {%- assign hours = diff | modulo: hoursEquationA | divided_by: hoursEquationB | floor -%}

                {%- assign minutesEquationA = 1000 | times: 60 | times: 60 -%}
                {%- assign minutesEquationB = 1000 | times: 60 -%}
                {%- assign minutes = diff | modulo: minutesEquationA | divided_by: minutesEquationB | floor -%}

                {%- assign secondsEquationA = 1000 | times: 60 -%}
                {%- assign seconds = diff | modulo: secondsEquationA | divided_by: 1000 | floor  -%}

            {%- else -%}

                {%- assign daysEquationA = 1000 | times: 60 | times: 60 | times: 24 -%}
                {%- assign days = diff | divided_by: daysEquationA | floor -%}

                {%- assign hoursEquationA = 1000 | times: 60 | times: 60 | times: 24 -%}
                {%- assign hoursEquationB = 1000 | times: 60 | times: 60 -%}
                {%- assign hours = diff | modulo: hoursEquationA | divided_by: hoursEquationB | floor -%}

                {%- assign minutesEquationA = 1000 | times: 60 | times: 60 -%}
                {%- assign minutesEquationB = 1000 | times: 60 -%}
                {%- assign minutes = diff | modulo: minutesEquationA | divided_by: minutesEquationB | floor -%}

                {%- assign secondsEquationA = 1000 | times: 60 -%}
                {%- assign seconds = diff | modulo: secondsEquationA | divided_by: 1000 | floor  -%}

            {%- endif -%}

        {%- elsif request.design_mode -%}

            {%- assign years = 0 -%}
            {%- assign months = 0 -%}
            {%- assign days = 0 -%}
            {%- assign hours = 0 -%}
            {%- assign minutes = 0 -%}
            {%- assign seconds = 0 -%}

        {%- endif -%}

        {% if request.design_mode and section.settings.datetime == nil or seconds > 0 %}

            <div class="countdown-container mt-7" data-aos="{{ settings.sectionAnimation }}" data-aos-anchor="#finqu-section-{{ section.id }}" data-aos-delay style="--aos-order: {{ sectionAnimationOrder }}">

                <div class="countdown justify-content-{{ textAlign }}">

                    {% if section.settings.showYears %}

                        {% unless years == 0 and section.settings.hideTimeUnitOnZero and request.design_mode %}

                            <div class="countdown-item">

                                <span class="countdown-item-value" data-countdown-years>
                                    {%- if years < 10 and section.settings.zeroPad -%}
                                        0{{ years -}}
                                    {%- else -%}
                                        {{- years -}}
                                    {%- endif -%}
                                </span>

                                <span class="countdown-item-label">
                                    {{ 'general.datetime.year_plural' | t }}
                                </span>

                            </div>

                        {% endunless %}

                    {% endif %}

                    {% if section.settings.showMonths %}

                        {% unless months == 0 and section.settings.hideTimeUnitOnZero and request.design_mode %}

                            <div class="countdown-item">

                                <span class="countdown-item-value" data-countdown-months>
                                    {%- if months < 10 and section.settings.zeroPad -%}
                                        0{{ months -}}
                                    {%- else -%}
                                        {{- months -}}
                                    {%- endif -%}
                                </span>

                                <span class="countdown-item-label">{{ 'general.datetime.month_plural' | t }}</span>

                            </div>

                        {% endunless %}

                    {% endif %}

                    {% unless days == 0 and section.settings.hideTimeUnitOnZero and request.design_mode %}

                        <div class="countdown-item">

                            <span class="countdown-item-value" data-countdown-days>
                                {%- if days < 10 and section.settings.zeroPad -%}
                                    0{{ days -}}
                                {%- else -%}
                                    {{- days -}}
                                {%- endif -%}
                            </span>

                            <span class="countdown-item-label">{{ 'general.datetime.day_plural' | t }}</span>

                        </div>

                    {% endunless %}

                    {% unless hours == 0 and section.settings.hideTimeUnitOnZero and request.design_mode %}

                        <div class="countdown-item">

                            <span class="countdown-item-value" data-countdown-hours>
                                {%- if hours < 10 and section.settings.zeroPad -%}
                                    0{{ hours -}}
                                {%- else -%}
                                    {{- hours -}}
                                {%- endif -%}
                            </span>

                            <span class="countdown-item-label">{{ 'general.datetime.hour_plural' | t }}</span>

                        </div>

                    {% endunless %}

                    {% unless minutes == 0 and section.settings.hideTimeUnitOnZero and request.design_mode %}

                        <div class="countdown-item">

                            <span class="countdown-item-value" data-countdown-minutes>
                                {%- if minutes < 10 and section.settings.zeroPad -%}
                                    0{{ minutes -}}
                                {%- else -%}
                                    {{- minutes -}}
                                {%- endif -%}
                            </span>

                            <span class="countdown-item-label">{{ 'general.datetime.minute_plural' | t }}</span>

                        </div>

                    {% endunless %}

                    <div class="countdown-item">

                        <span class="countdown-item-value" data-countdown-seconds>
                            {%- if seconds < 10 and section.settings.zeroPad -%}
                                0{{ seconds -}}
                            {%- else -%}
                                {{- seconds -}}
                            {%- endif -%}
                        </span>

                        <span class="countdown-item-label">{{ 'general.datetime.second_plural' | t }}</span>

                    </div>

                </div>

            </div>

        {% else %}

            <div class="text-richtext mt-7" data-aos="{{ settings.sectionAnimation }}" data-aos-anchor="#finqu-section-{{ section.id }}" data-aos-delay style="--aos-order: {{ sectionAnimationOrder }}">

                {{- section.settings.richtext -}}

            </div>

        {% endif %}

    {% endif %}

{%- endcapture -%}

{%- capture imgContent -%}

     {%- capture imgSrc -%}

        {%- capture placeholderSvg -%}
            {%- render 'placeholder-svg', type: 'background', base64: true -%}
        {%- endcapture -%}

        {%- if section.settings.img -%}
            {% if section.settings.imgDimming > 0 %}linear-gradient(0deg, rgb(0,0,0, {{- section.settings.imgDimming > 0 -}}%), rgb(0,0,0, {{- section.settings.imgDimming > 0 -}}%)) | {% endif %}url('{{- section.settings.img | thumb: '1920,1080' -}}') 1x, url('{{- section.settings.img | thumb: '1920,1080' | thumb: '@2x' -}}') 2x
        {%- else -%}
            {% if section.settings.imgDimming > 0 %}linear-gradient(0deg, rgb(0,0,0, {{- section.settings.imgDimming > 0 -}}%), rgb(0,0,0, {{- section.settings.imgDimming > 0 -}}%)) | {% endif %}url('{{ placeholderSvg | strip }}') 1x
        {%- endif -%}

    {%- endcapture -%}

    <div class="lazy position-absolute top-0 start-0 w-100 h-100 bg-position-center{% if section.settings.img %} bg-size-cover{% endif %}" data-bg-set="{{- imgSrc | strip -}}"{% if section.settings.img.offset_left or section.settings.img.offset_top %} style="--bg-position: {{ section.settings.img.offset_left }}% {{ section.settings.img.offset_top }}%"{% endif %}></div>

{%- endcapture -%}

{%- capture sectionContent -%}

    {%- if section.settings.countdownPosition == 'below' -%}

        {%- assign sectionBgImg = section.settings.img -%}
        {%- assign sectionBgImgDimming = section.settings.imgDimming -%}
        {%- assign sectionBgImgBlur = section.settings.imgBlur -%}

        <div class="row gy-5 justify-content-{{ textAlign }}">

            <div class="text-container col align-self-center w-100 max-w-lg-60">

                <div class="text-{{ textAlign }}" data-aos="{{ settings.sectionAnimation }}" data-aos-anchor="#finqu-section-{{ section.id }}" data-aos-delay style="--aos-order: {{ sectionAnimationOrder }}">

                    {% render 'section-header', sectionTitle: section.settings.sectionTitle, sectionTitleTag: section.settings.sectionTitleTag, sectionSubtitle: section.settings.sectionSubtitle, sectionSubtitleTag: section.settings.sectionSubtitleTag, sectionOverline: section.settings.sectionOverline, sectionOverlineTag: section.settings.sectionOverlineTag, sectionHeaderContainer: 'none', sectionAnimation: settings.sectionAnimation, sectionHandle: sectionHandle, sectionHeaderFontSizeScale: section.settings.sectionHeaderFontSizeScale %}

                    {{- countdownContent -}}

                    {% if section.settings.btnLink.text %}

                        {%- assign sectionAnimationOrder = sectionAnimationOrder | plus: 1 -%}

                        <div class="mt-7" data-aos="{{ settings.sectionAnimation }}" data-aos-anchor="#finqu-section-{{ section.id }}" data-aos-delay style="--aos-order: {{ sectionAnimationOrder }}">

                            {%- render 'section-quick-link', style: section.settings.btnStyle, text: section.settings.btnLink.text, url: section.settings.btnLink.url, target: section.settings.btnLink.target -%}

                        </div>

                    {% endif %}

                </div>

            </div>

        </div>

    {%- elsif section.settings.countdownPosition == 'side' -%}

        {%- assign sectionContainer = 'none' -%}
        {%- assign sectionPaddingMode = 'custom' -%}
        {%- assign sectionPaddingTop = 0 -%}
        {%- assign sectionPaddingBottom = 0-%}

        <div class="d-flex flex-column flex-md-row">

            <div class="flex-grow-1 position-relative overflow-hidden min-h" style="--min-height: {{ section.settings.sectionMinHeight | divided_by: 2 }}vh; --min-height-lg: {{ section.settings.sectionMinHeight }}vh">

                <div class="d-flex align-items-center position-md-absolute top-0 start-0 w-100 h-100">

                    <div class="d-flex flex-grow-1 justify-content-{{ textAlign }} py-4">

                        <div class="text-container container-fluid max-w-lg-80">

                            <div class="text-{{ textAlign }}" data-aos="{{ settings.sectionAnimation }}" data-aos-anchor="#finqu-section-{{ section.id }}" data-aos-delay style="--aos-order: {{ sectionAnimationOrder }}">

                                {% render 'section-header', sectionTitle: section.settings.sectionTitle, sectionTitleTag: section.settings.sectionTitleTag, sectionSubtitle: section.settings.sectionSubtitle, sectionSubtitleTag: section.settings.sectionSubtitleTag, sectionOverline: section.settings.sectionOverline, sectionOverlineTag: section.settings.sectionOverlineTag, sectionHeaderContainer: 'none', sectionAnimation: settings.sectionAnimation, sectionHandle: sectionHandle, sectionHeaderFontSizeScale: section.settings.sectionHeaderFontSizeScale %}

                                {{- countdownContent -}}

                                {% if section.settings.btnLink.text %}

                                    {%- assign sectionAnimationOrder = sectionAnimationOrder | plus: 1 -%}

                                    <div class="mt-7" data-aos="{{ settings.sectionAnimation }}" data-aos-anchor="#finqu-section-{{ section.id }}" data-aos-delay style="--aos-order: {{ sectionAnimationOrder }}">

                                        {%- render 'section-quick-link', style: section.settings.btnStyle, text: section.settings.btnLink.text, url: section.settings.btnLink.url, target: section.settings.btnLink.target -%}

                                    </div>

                                {% endif %}

                            </div>

                        </div>

                    </div>

                </div>

            </div>

            <div class="flex-grow-1 position-relative overflow-hidden min-h" style="--min-height: {{ section.settings.sectionMinHeight | divided_by: 2 }}vh; --min-height-lg: {{ section.settings.sectionMinHeight }}vh">

                {{- imgContent -}}

            </div>

        </div>

    {%- endif -%}

{%- endcapture -%}

{% render 'section', section: section, sectionContent: sectionContent, sectionContentAnimation: false, sectionHeader: false, sectionHeaderTextAlign: textAlign, sectionMinHeight: sectionMinHeight, sectionBgImg: sectionBgImg, sectionBgImgDimming: sectionBgImgDimming, sectionBgImgBlur: sectionBgImgBlur, sectionMinHeight: sectionMinHeight, sectionContainer: sectionContainer, sectionPaddingMode: sectionPaddingMode, sectionPaddingTop: sectionPaddingTop, sectionPaddingBottom: sectionPaddingBottom %}

