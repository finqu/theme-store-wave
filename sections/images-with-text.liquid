                        <div class="aspect-ratio-container">

                            {%- if section.settings.img2 -%}

                                <picture>
                                    <source media="(min-width: {{ settings.styleGridBreakpointLg }})" data-srcset="
                                        {{- section.settings.img2 | thumb: img2SizeLg }} 1x,
