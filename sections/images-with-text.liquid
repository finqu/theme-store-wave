                                {%- endcapture -%}

                                {% render 'placeholder-svg', type: 'image', class: class %}
                    
                            {%- endif -%}

                        </div>

                    </div>

                </div>

                <div class="g-col-7{% if section.settings.imgPosition == 'end' %} order-1{% endif %}">

                    {%- assign sectionAnimationOrder = sectionAnimationOrder | plus: 1 -%}

