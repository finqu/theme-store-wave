{% if section.settings.customDisplayInformation %}
    {%- assign productPerRow = section.settings.productPerRow -%}
{% else %}
    {%- assign productPerRow = settings.productPerRow -%}
{% endif %}

{%- capture sectionStyle -%}
    #finqu-section-{{ section.id }} .swiper-slide {
        --swiper-slide-width: 50;
        --swiper-slide-width-sm: 25;
        --swiper-slide-width-md: 33.333333;
        --swiper-slide-width-lg: {{ 100 | divided_by: productPerRow }};
    }
    #finqu-section-{{ section.id }} .swiper-slide.promotion-slide {
        --swiper-slide-width: 80;
        --swiper-slide-width-sm: 50;
        --swiper-slide-width-md: 30;
        --swiper-slide-width-lg: 30;
    }
    {%- for tab in section.settings.setting_blocks.items -%}
        #finqu-section-{{ section.id }} [data-tab="{{ forloop.index }}"] .promotion-slide {
            --style-text-color: {{ tab.settings.promotionTextColor }};
            --style-link-color: {{ tab.settings.promotionTextColor }};
            --style-heading-color: {{ tab.settings.promotionTextColor }};
            --style-accent-color: {{ tab.settings.promotionTextColor }};
        }
    {%- endfor %}
{%- endcapture -%}

<style>{{ sectionStyle | strip | replace: '  ', '' | strip_newlines }}</style>

{%- capture sectionAction -%}
    {% render 'section-quick-link', section: section %}
{%- endcapture -%}

{%- capture sectionTabs -%}

    {% if section.settings.setting_blocks.items.size > 1 %}

        {%- for tab in section.settings.setting_blocks.items -%}
            {%- render 'section-tab', sectionTab: tab.settings.title -%}
        {%- endfor -%}

    {% endif %}

{%- endcapture -%}

{%- capture sectionContent -%}

    {%- for tab in section.settings.setting_blocks.items -%}

        {%- capture sectionTabContent -%}

            <div data-tab="{{ forloop.index }}">

                {%- case tab.settings.listType -%}
                    {% when 'discounted' %}
                        {%- assign items = products.discounted -%}
                    {% when 'new' %}
                        {%- assign items = products.new_products -%}
                    {% when 'recent' %}
                        {%- assign items = products.recent -%}
                    {% when 'tag' %}
                        {%- assign items = products.tags[section.settings.tagId] -%}
                    {% when 'category' %}
                        {%- assign items = categories[section.settings.category.id].products -%}
                    {% when 'manufacturer' %}
                        {%- assign items = manufacturers[section.settings.manufacturer.id].products -%}
                {%- endcase -%}

                {%- assign carouselProducts = items | slice: 0, section.settings.productAmount -%}

                {%- capture carouselSlides -%}
                
                    {%- assign carouselSlideIndex = 0 -%}

                    {% if tab.settings.showPromotionSlide %}

                        {%- assign carouselSlideIndex = 1 -%}

                        {%- capture promotionImgSrc -%}

                            {%- capture placeholderSvg -%}
                                {%- render 'placeholder-svg', type: 'image', base64: true, width: 500, height: 500 -%}
                            {%- endcapture -%}

                            {%- if tab.settings.promotionImgSrc -%}
                                {% if tab.settings.promotionImgDimming > 0 %}linear-gradient(0deg, rgb(0,0,0, {{- tab.settings.promotionImgDimming -}}%), rgb(0,0,0, {{- tab.settings.promotionImgDimming -}}%)) | {% endif %}url('{{- tab.settings.promotionImgSrc | thumb: '500,500' -}}') 1x, url('{{- tab.settings.promotionImgSrc | thumb: '500,500' | thumb: '@2x' -}}') 2x
                            {%- else -%}
                                {% if tab.settings.promotionImgDimming > 0 %}linear-gradient(0deg, rgb(0,0,0, {{- tab.settings.promotionImgDimming -}}%), rgb(0,0,0, {{- tab.settings.promotionImgDimming -}}%)) | {% endif %}url('{{ placeholderSvg | strip }}') 1x
                            {%- endif -%}

                        {%- endcapture -%}

                        <div class="swiper-slide promotion-slide{% if carouselProducts.size < 1 and request.design_mode == false %} min-h-px-350 min-h-px-md-500{% endif %}">

                            <div class="d-flex flex-column border-radius justify-content-end p-4 h-100 lazy {% if tab.settings.promotionImgSrc %}bg-size-cover{% else %}bg-accent{% if tab.settings.promotionImgPos == 'nil' %} bg-position-center-center{% endif %}{% endif %}{% if tab.settings.promotionImgPos != 'nil' %} bg-position-{{ tab.settings.promotionImgPos }}{% endif %}" data-bg-set="{{- promotionImgSrc | strip -}}" data-aos="{{ settings.sectionAnimation }}" data-aos-anchor="#finqu-section-{{ section.id }}" data-aos-delay style="--aos-order: {{ carouselSlideIndex }}">

                                {% if tab.settings.promotionText %}

                                    <p class="display-5 text-style-accent">
                                        {{ tab.settings.promotionText }}
                                    </p>

                                {% endif %}

                                {% if tab.settings.promotionLinkText %}

                                    <div>

                                        <a href="{{ tab.settings.promotionLinkResource.url | default: '#' }}" class="lead text-underline-indicator">
                                            {{ tab.settings.promotionLinkText }}
                                        </a>

                                    </div>

                                {% endif %}

                            </div>

                        </div>

                    {% endif %}

                    {% if carouselProducts.size > 0 %}

                        {% for product in carouselProducts %}

                            <div class="swiper-slide">

                                <div class="swiper-slide-inner" data-aos="{{ settings.sectionAnimation }}" data-aos-anchor="#finqu-section-{{ section.id }}" data-aos-delay style="--aos-order: {{ forloop.index | plus: carouselSlideIndex }}">

                                    {% if section.settings.customDisplayInformation %}

                                        {%- render 'product-card-grid', product: product, productPerRow: productPerRow, showDiscountBadge: section.settings.showDiscountBadge, showOutOfStockBadge: section.settings.showOutOfStockBadge, showNewBadge: section.settings.showNewBadge, showPromotionBadge: section.settings.showPromotionBadge, showManufacturer: section.settings.showManufacturer, showName: section.settings.showProductName, showPricing: section.settings.showPricing, showAddToCart: section.settings.showAddToCart, showStockBalance: section.settings.showStockBalance -%}

                                    {% else %}

                                        {%- render 'product-card-grid', product: product, productPerRow: productPerRow -%}

                                    {% endif %}

                                </div>

                            </div>

                        {% endfor %}

                    {% elsif request.design_mode %}

                        {% for num in (1..section.settings.productAmount) %}

                            <div class="swiper-slide">

                                <div class="swiper-slide-inner" data-aos="{{ settings.sectionAnimation }}" data-aos-anchor="#finqu-section-{{ section.id }}" data-aos-delay style="--aos-order: {{ forloop.index | plus: carouselSlideIndex }}">

                                    {% if section.settings.customDisplayInformation %}

                                        {%- render 'product-card-grid', productPerRow: productPerRow, productPerRow: productPerRow, showDiscountBadge: section.settings.showDiscountBadge, showOutOfStockBadge: section.settings.showOutOfStockBadge, showNewBadge: section.settings.showNewBadge, showPromotionBadge: section.settings.showPromotionBadge, showManufacturer: section.settings.showManufacturer, showName: section.settings.showProductName, showPricing: section.settings.showPricing, showAddToCart: section.settings.showAddToCart, showStockBalance: section.settings.showStockBalance -%}

                                    {% else %}

                                        {%- render 'product-card-grid', productPerRow: productPerRow -%}

                                    {% endif %}

                                </div>

                            </div>

                        {% endfor %}

                    {% endif %}

                {%- endcapture -%}

                {%- render 'swiper', slides: carouselSlides, pagination: section.settings.carouselPagination, navigation: section.settings.carouselNavigation, slidesPerView: 'auto', style: section.settings.carouselStyle, paginationPosition: 'relative', evenHeightSlides: true, standalone: true, freemode: true, autoplaySpeed: section.settings.carouselAutoplaySpeed -%}

            </div>

        {%- endcapture -%}

        {%- render 'section-tab-content', sectionTabContent: sectionTabContent -%}

    {%- endfor -%}

{%- endcapture -%}

