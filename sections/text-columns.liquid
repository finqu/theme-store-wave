{% assign sectionAnimationOrder = 0 %}

{%- if section.settings.sectionOverline -%}
    {%- assign sectionAnimationOrder = sectionAnimationOrder | plus: 1 -%}
{%- endif -%}

{%- if section.settings.sectionTitle -%}
    {%- assign sectionAnimationOrder = sectionAnimationOrder | plus: 1 -%}
{%- endif -%}

{%- if section.settings.sectionSubtitle -%}
    {%- assign sectionAnimationOrder = sectionAnimationOrder | plus: 1 -%}
{%- endif -%}

{% if section.settings.orientation == 'horizontal' %}

    {% if section.settings.imgAspectRatio == '16:9' %}

        {%- assign imgSizeSm = '234,136' -%}
        {%- assign imgSizeLg = '234,136' -%}

        {%- case section.settings.colPerRow -%}
            {% when 2 %}
                {%- assign imgSizeXl = '670,395' -%}
            {% when 3 %}
                {%- assign imgSizeXl = '447,269' -%}
            {% when 4 %}
                {%- assign imgSizeXl = '335,206' -%}
        {%- endcase -%}

    {% elsif section.settings.imgAspectRatio == '9:13' %}

        {%- assign imgSizeSm = '234,333' -%}
        {%- assign imgSizeLg = '234,333' -%}

        {%- case section.settings.colPerRow -%}
            {% when 2 %}
                {%- assign imgSizeXl = '670,950' -%}
            {% when 3 %}
                {%- assign imgSizeXl = '447,628' -%}
            {% when 4 %}
                {%- assign imgSizeXl = '335,467' -%}
        {%- endcase -%}

    {% elsif section.settings.imgAspectRatio == '4:3' %}

        {%- assign imgSizeSm = '234,178' -%}
        {%- assign imgSizeLg = '234,178' -%}

        {%- case section.settings.colPerRow -%}
            {% when 2 %}
                {%- assign imgSizeXl = '670,513' -%}
            {% when 3 %}
                {%- assign imgSizeXl = '447,345' -%}
            {% when 4 %}
                {%- assign imgSizeXl = '335,262' -%}
        {%- endcase -%}

    {% elsif section.settings.imgAspectRatio == '1:1' %}

        {%- assign imgSizeSm = '234,234' -%}
        {%- assign imgSizeLg = '234,234' -%}

        {%- case section.settings.colPerRow -%}
            {% when 2 %}
                {%- assign imgSizeXl = '670,670' -%}
            {% when 3 %}
                {%- assign imgSizeXl = '447,447' -%}
            {% when 4 %}
                {%- assign imgSizeXl = '335,335' -%}
        {%- endcase -%}

    {% elsif section.settings.imgAspectRatio == 'auto' %}

        {%- assign imgSizeSm = '234,234' -%}
        {%- assign imgSizeLg = '234,234' -%}

        {%- case section.settings.colPerRow -%}
            {% when 2 %}
                {%- assign imgSizeXl = '570,570' -%}
            {% when 3 %}
                {%- assign imgSizeXl = '380,380' -%}
            {% when 4 %}
                {%- assign imgSizeXl = '285,285' -%}
        {%- endcase -%}

    {% endif %}

{% else %}

    {% if section.settings.imgAspectRatio == '16:9' %}

        {%- assign imgSizeSm = '234,136' -%}
        {%- assign imgSizeLg = '234,136' -%}
        {%- assign imgSizeXl = '234,136' -%}

    {% elsif section.settings.imgAspectRatio == '9:13' %}

        {%- assign imgSizeSm = '234,333' -%}
        {%- assign imgSizeLg = '234,333' -%}
        {%- assign imgSizeXl = '234,333' -%}

    {% elsif section.settings.imgAspectRatio == '4:3' %}

        {%- assign imgSizeSm = '234,178' -%}
        {%- assign imgSizeLg = '234,178' -%}
        {%- assign imgSizeXl = '234,178' -%}

    {% elsif section.settings.imgAspectRatio == '1:1' %}

        {%- assign imgSizeSm = '234,234' -%}
        {%- assign imgSizeLg = '234,234' -%}
        {%- assign imgSizeXl = '234,234' -%}

    {% elsif section.settings.imgAspectRatio == 'auto' %}

        {%- assign imgSizeSm = '234,234' -%}
        {%- assign imgSizeLg = '234,234' -%}
        {%- assign imgSizeXl = '234,234' -%}

    {% endif %}

{% endif %}

{%- if section.settings.imgScaleRatio < 1 -%}
    {%- capture imgSizeSm -%}{{- imgSizeSm | split: ',' | first | times: section.settings.imgScaleRatio | round -}},{{- imgSizeSm | split: ',' | last | times: section.settings.imgScaleRatio | round -}}{%- endcapture %}
    {%- capture imgSizeLg -%}{{- imgSizeLg | split: ',' | first | times: section.settings.imgScaleRatio | round -}},{{- imgSizeLg | split: ',' | last | times: section.settings.imgScaleRatio | round -}}{%- endcapture %}
    {%- capture imgSizeXl -%}{{- imgSizeXl | split: ',' | first | times: section.settings.imgScaleRatio | round -}},{{- imgSizeXl | split: ',' | last | times: section.settings.imgScaleRatio | round -}}{%- endcapture %}
    {%- assign imgSizeSm = imgSizeSm -%}
    {%- assign imgSizeLg = imgSizeLg -%}
    {%- assign imgSizeXl = imgSizeXl -%}
{%- endif -%}

{%- if section.settings.sectionHighlightItems != 'nil' -%}
    {%- assign sectionHighlightItems = section.settings.sectionHighlightItems -%}
{%- else -%}
    {%- assign sectionHighlightItems = settings.sectionHighlightItems -%}
{%- endif -%}

{%- capture sectionStyle -%}
    #finqu-section-{{ section.id }} .section-inner {
        --bs-gutter-y: 3rem;
        --section-inner-gap: {{ settings.sectionInnerGap }};
    }
    @media screen and (min-width: {{ settings.styleGridBreakpointMd }}) {
        --style-grid-gutter-width: 3rem;
    }
    {% if section.settings.orientation == 'vertical' and sectionHighlightItems != true %}
        @media screen and (min-width: {{ settings.styleGridBreakpointLg }}) {
            #finqu-section-{{ section.id }} .section-inner {
                --style-grid-gutter-width: 4rem;
            }
        }
    {% endif %}
{%- endcapture -%}

<style>{{ sectionStyle | strip | replace: '  ', '' | strip_newlines }}</style>

{%- capture sectionContent -%}

    <div class="row gy-5 {% if section.settings.orientation == 'horizontal' %}row-cols-1 row-cols-lg-{{ section.settings.colPerRow }}{% else %}row-cols-1{% endif %}">

        {% for item in section.settings.setting_blocks.items %}

            {%- assign sectionAnimationOrder = sectionAnimationOrder | plus: 1 -%}

            <div class="col item-{{ forloop.index }}" data-aos="{{ settings.sectionAnimation }}" data-aos-anchor="#finqu-section-{{ section.id }}" data-aos-delay style="--aos-order: {{ sectionAnimationOrder }}">

                {%- capture itemStyle -%}
                    {%- if section.settings.orientation == 'vertical' -%}
                        #finqu-section-{{ section.id }} .item-{{ forloop.index }} > .grid {
                            grid-template-columns:{% if item.settings.img %} minmax(auto, {{ imgSizeSm | split: ',' | first | times: 0.5 }}px){% endif %} 1fr;
                        }
                        #finqu-section-{{ section.id }} .item-{{ forloop.index }} > .grid > .grid {
                            grid-template-columns: 1fr;
                            grid-template-rows: auto;
                        }
                        @media screen and (min-width: {{ settings.styleGridBreakpointLg }}) {
                            #finqu-section-{{ section.id }} .item-{{ forloop.index }} > .grid {
                                grid-template-columns:{% if item.settings.img %} minmax(auto, {{ imgSizeLg | split: ',' | first }}px){% endif %} 1fr;
                            }
                            #finqu-section-{{ section.id }} .item-{{ forloop.index }} > .grid > .grid {
                                grid-template-columns: {% if item.settings.img %}{% if item.settings.title %} 20%{% endif %}{% else %}{% if item.settings.title %} 30%{% endif %}{% endif %} auto;
                                grid-template-rows: subgrid;
                            }
                        }
                        @media screen and (min-width: {{ settings.styleGridBreakpointXl }}) {
                            #finqu-section-{{ section.id }} .item-{{ forloop.index }} > .grid {
                                grid-template-columns:{% if item.settings.img %} minmax(auto, {{ imgSizeXl | split: ',' | first }}px){% endif %} 1fr;
                            }
                            #finqu-section-{{ section.id }} .item-{{ forloop.index }} > .grid > .grid {
                                grid-template-columns:{% if item.settings.img %}{% if item.settings.title %} 20%{% endif %}{% else %}{% if item.settings.title %} 30%{% endif %}{% endif %} auto;
                                grid-template-rows: subgrid;
                            }
                        }
                    {% else %}
                        #finqu-section-{{ section.id }} .item-{{ forloop.index }} > .grid {
                            grid-template-columns:{% if item.settings.img %} minmax(auto, {{ imgSizeSm | split: ',' | first | times: 0.5 }}px){% endif %} 1fr;
                        }
                        #finqu-section-{{ section.id }} .item-{{ forloop.index }} > .grid > .grid {
                            grid-template-columns: 1fr;
                            grid-template-rows: auto;
                        }
                        @media screen and (min-width: {{ settings.styleGridBreakpointLg }}) {
                            #finqu-section-{{ section.id }} .item-{{ forloop.index }} > .grid {
                                grid-template-columns: 1fr;
                            }
                            {% if section.settings.orientation == 'horizontal' and section.settings.imgScaleRatio < 1 %}
                                #finqu-section-{{ section.id }} .item-{{ forloop.index }} .aspect-ratio-{{ section.settings.imgAspectRatio | replace: ':', '-' }} {
                                    --img-scale-ratio: {{ section.settings.imgScaleRatio }};
                                }
                            {% endif %}
                        }
                    {%- endif -%}

                {%- endcapture -%}

                <style>{{ itemStyle | strip | replace: '  ', '' | strip_newlines }}</style>

                <div class="section-highlight-item grid gap-4 align-items-center{% if section.settings.orientation == 'vertical' and sectionHighlightItems != true and forloop.first == false %} border-top pt-g{% endif %}">

                    {% if item.settings.img %}

                        <div>

                            <div class="aspect-ratio-{{ section.settings.imgAspectRatio | replace: ':', '-' }} justify-content-{{ section.settings.imgAlign }}">

                                <div class="aspect-ratio-container">

                                    <picture>
                                        <source media="(min-width: {{ settings.styleGridBreakpointLg }})" data-srcset="
                                            {{- item.settings.img | thumb: imgSizeXl }} 1x,
                                            {{- item.settings.img | thumb: imgSizeXl | thumb:'@2x' }} 2x">

                                        <source media="(min-width: {{ settings.styleGridBreakpointMd }})" data-srcset="
                                            {{- item.settings.img | thumb: imgSizeLg }} 1x,
                                            {{- item.settings.img | thumb: imgSizeLg | thumb:'@2x' }} 2x">

                                        <source data-srcset="
                                            {{- item.settings.img | thumb: imgSizeSm }} 1x,
                                            {{- item.settings.img | thumb: imgSizeSm | thumb:'@2x' }} 2x">

                                        <img
                                            alt="{{ item.settings.img.alt }}"
                                            data-src="{{ item.settings.img | thumb: imgSizeSm }}"
                                            data-srcset="{{ item.settings.img | thumb: imgSizeSm }} 1x,{{ item.settings.img | thumb: imgSizeSm | thumb:'@2x' }} 2x"
                                            class="lazy aspect-ratio-item{% if section.settings.imgFit %} aspect-ratio-item-cover{% endif %}"{% if item.settings.img.offset_left or item.settings.img.offset_top %} style="--object-position: {{ item.settings.img.offset_left }}% {{ item.settings.img.offset_top }}%"{% endif %}>
                                    </picture>

                                </div>

                            </div>

                        </div>

                    {% endif %}

                    <div class="grid gap-4 align-items-center">

                        {% if item.settings.title %}

                            <div>

                                <h2 class="text-title d-block fw-medium mb-0">
                                    {{- item.settings.title -}}
                                </h2>

                            </div>

                        {% endif %}

                        <div class="text-richtext">

                            {{- item.settings.richtext -}}

                            {% if item.settings.btnLink %}

                                <div class="mt-4">

                                    {%- render 'section-quick-link', style: section.settings.btnStyle, text: item.settings.btnLink.text, url: item.settings.btnLink.url, target: item.settings.btnLink.target -%}

                                </div>

                            {% endif %}

                        </div>

                    </div>

                </div>

            </div>

        {% endfor %}

    </div>

{%- endcapture -%}

