{%- if section.settings.blockGutterWidth != 'nil' -%}

    {%- capture sectionStyle -%}
        #finqu-section-{{ section.id }} {
            --block-padding-bottom: {{- section.settings.blockGutterWidth -}};
        }
    {%- endcapture -%}

    <style>{{ sectionStyle | strip | replace: '  ', '' | strip_newlines }}</style>

{%- endif -%}

{%- capture sectionContent -%}

    {% container %}

{%- endcapture -%}

{% render 'section', section: section, sectionContent: sectionContent %}

