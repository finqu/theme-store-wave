    Accepts:
    - type {String} facebook | instagram | x | whatsapp | snapchat | pinterest | youtube | linkedin | tumblr | reddit | tiktok | ravelry
    - url {String}
    - size {String} xs | sm | m | lg | xl | inherit
    - style {String} default | text | border-circle | box | bw | section

