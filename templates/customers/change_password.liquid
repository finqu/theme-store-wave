{%- assign sectionTitle = 'account.edit_password_title' | t -%}

{%- capture sectionHeaderSecondaryAction -%}

	<a href="{{ routes.account_url }}">

		{%- render 'icon', icon: 'arrow-left', class: 'me-1' -%}

		<span>
			{{- 'general.back' | t -}}
		</span>

	</a>

{%- endcapture -%}

{%- capture sectionContent -%}

    {% form 'change_customer_password' %}

        <div class="mb-4 form-floating">

           <input type="password" pattern=".{8,}" class="form-control" name="password" id="account-change-password" placeholder="{{ 'account.information.new_password' | t }}" value="{{ form.submitted.password | escape }}" required title="8 {{ 'min_length' | t }}">

           <label for="account-change-password">
                {{- 'account.information.new_password' | t -}}
            </label>

        </div>

        <div class="mb-4 form-floating">

           <input type="password" pattern=".{8,}" class="form-control" name="confirm_password" id="account-change-password-confirm" placeholder="{{ 'account.information.confirm_new_password' | t }}" value="{{ form.submitted.password_confirm | escape }}" required title="8 {{ 'min_length' | t }}">

           <label for="account-change-password-confirm">
                {{- 'account.information.confirm_new_password' | t -}}
            </label>

        </div>

        {% render 'form-error', error: form.error, class: 'mb-4' %}

        <button type="submit" class="btn btn-primary d-block w-100">
            {{- 'general.save' | t -}}
        </button>

    {% endform %}

{%- endcapture -%}

<section class="section section-account-change-password">
    {% render 'section', sectionHandle: '.section-account-change-password', sectionTitle: sectionTitle, sectionHeaderSecondaryAction: sectionHeaderSecondaryAction, sectionContent: sectionContent, sectionContainer: 'compact', sectionOverlay: settings.sectionOverlay, sectionInnerGap: '2rem' %}
</section>